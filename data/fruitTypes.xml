<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<fruitTypes>
    <!--
        Crop material quantity factors for Realistic Harvesting
        These values affect engine load calculation (1.0 = Standard Wheat)
        
        NEW MASS-BASED LOGIC (v1.3+):
        - 1.0 = Standard Grain (Wheat/Barley/Oat). Approx 50% Grain / 50% MOG (Straw/Chaff).
        - < 1.0 = High density grain with LOW non-grain biomass (e.g. Maize 0.45 means mostly grain, so we can harvest MORE tons/hour).
        - > 1.0 = Tough crops or high friction (e.g. Rice).
    -->
    
    <!-- CEREALS -->
    <!-- Wheat: Base reference (0.69 kg/m2) -> ~5 km/h -->
    <fruitType name="wheat" mrMaterialQtyFx="1.0" />
    <fruitType name="barley" mrMaterialQtyFx="0.95" />
    
    <!-- Oat: 0.25 kg/m2 (Very Light). High bulk. Factor 1.7 -> ~5.8 km/h -->
    <fruitType name="oat" mrMaterialQtyFx="1.7" />
    
    <!-- Rice: 0.38 kg/m2. Very tough. Factor 2.3 -> ~4 km/h -->
    <fruitType name="rice" mrMaterialQtyFx="2.3" />
    <!-- Rice Long: 0.52 kg/m2. Tough. Factor 0.75 -> ~4.6 km/h -->
    <fruitType name="ricelonggrain" mrMaterialQtyFx="0.75" />
    
    <!-- Sorghum: 0.53 kg/m2. Grain header. Factor 0.95 -> ~4.5 km/h -->
    <fruitType name="sorghum" mrMaterialQtyFx="0.95" />
    <fruitType name="millet" mrMaterialQtyFx="0.9" />
    
    <fruitType name="rye" mrMaterialQtyFx="1.0" />
    <fruitType name="spelt" mrMaterialQtyFx="1.0" />
    <fruitType name="triticale" mrMaterialQtyFx="1.0" />
    <fruitType name="buckwheat" mrMaterialQtyFx="1.0" />
    
    <!-- OILSEEDS -->
    <!-- Canola: 0.38 kg/m2. Bushy. Factor 1.8 -> ~4.5 km/h -->
    <fruitType name="canola" mrMaterialQtyFx="1.8" />
    
    <!-- Soybean: 0.32 kg/m2. Tough stems. Factor 1.4 -> ~4.7 km/h -->
    <fruitType name="soybean" mrMaterialQtyFx="1.4" />
    
    <!-- Sunflower: 0.18 kg/m2 (Extreme Light). Heads only. Factor 1.4 -> ~8.9 km/h -->
    <fruitType name="sunflower" mrMaterialQtyFx="1.4" />
    
    <fruitType name="linseed" mrMaterialQtyFx="1.1" />
    <fruitType name="mustard" mrMaterialQtyFx="1.1" />
    
    <!-- ROW CROPS -->
    <!-- Maize: 0.69 kg/m2. Corn header. Factor 0.55 -> ~6.6 km/h -->
    <fruitType name="maize" mrMaterialQtyFx="0.55" />
    
    <!-- PULSES -->
    <!-- Pea: 0.78 kg/m2 (Heavy). Factor 1.0 -> ~5 km/h -->
    <fruitType name="pea" mrMaterialQtyFx="1.0" />
    <!-- GreenBean: Vegetable harvester? Usually slow. Factor 0.3 -->
    <fruitType name="greenBean" mrMaterialQtyFx="0.3" />
    <!-- PintoBean: Like Soybean (Dry). Factor 1.5 -->
    <fruitType name="pintoBean" mrMaterialQtyFx="1.5" />
    <!-- BlackEyePea: Factor 1.0 -->
    <fruitType name="blackEyePea" mrMaterialQtyFx="1.0" />
    
    <!-- VEGETABLES & SPICES -->
    <!-- Spinach: Light but volume? Factor 0.5 -->
    <fruitType name="spinach" mrMaterialQtyFx="0.5" />
    <fruitType name="mint" mrMaterialQtyFx="1.0" />
    
    <!-- ROOT CROPS (Massive Mass Yield -> Low Factors) -->
    <!-- SugarBeet: 4.05 kg/m2 (5.8x Wheat). Factor 0.28 -> ~8.9 km/h -->
    <fruitType name="sugarBeet" mrMaterialQtyFx="0.28" />
    <!-- Potato: 2.89 kg/m2 (4.2x Wheat). Factor 0.35 -> ~6.8 km/h -->
    <fruitType name="potato" mrMaterialQtyFx="0.35" />
    <!-- Carrot: 5.4 kg/m2 (8x Wheat). Factor 0.15 -> ~4-5 km/h -->
    <fruitType name="carrot" mrMaterialQtyFx="0.15" />
    <fruitType name="parsnip" mrMaterialQtyFx="0.15" />
    <fruitType name="beetroot" mrMaterialQtyFx="0.15" />
    
    <!-- SPECIAL -->
    <!-- Cotton: 0.15 kg/m2 (Extreme Light). Slow Baling. Factor 3.0 -> ~9 km/h -->
    <fruitType name="cotton" mrMaterialQtyFx="3.0" />
    <!-- Sugarcane: Massive yield (10+ kg/m2). Factor 0.1 -> ~4-5 km/h -->
    <fruitType name="sugarcane" mrMaterialQtyFx="0.1" />
    
    <!-- OTHER -->
    <fruitType name="poplar" mrMaterialQtyFx="0.5" />
    <fruitType name="olive" mrMaterialQtyFx="1.0" />
    <fruitType name="grape" mrMaterialQtyFx="1.0" />
    <fruitType name="poppy" mrMaterialQtyFx="0.9" />
    <fruitType name="miscanthus" mrMaterialQtyFx="0.8" />
    <fruitType name="oilseedRadish" mrMaterialQtyFx="0.5" />
    
    <!-- FORAGE (If handled by combine spec) -->
    <fruitType name="grass" mrMaterialQtyFx="0.7" />
    <fruitType name="meadow" mrMaterialQtyFx="1.0" />
    <fruitType name="alfalfa" mrMaterialQtyFx="1.0" />
    <fruitType name="clover" mrMaterialQtyFx="1.0" />
</fruitTypes>
